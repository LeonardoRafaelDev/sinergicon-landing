---
import '@fontsource/montserrat/700.css'
import '@fontsource/work-sans/500.css'
import '@fontsource/space-grotesk/700.css'

import ServiceItem from '../components/ServiceItem.astro'

import { ourServicesList } from '../data'
---

<html>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Sinergicon</title>
  </head>
  <body>
    <section class="flex flex-col items-center justify-center">
      <div class="max-w-[770px] text-center">
        <div class="flex flex-col items-center font-montserrat">
          <h4 class="font-bold uppercase text-primary">
            LOREM IPSUM DOLOR SIT
          </h4>
          <h1 class="my-4 w-10/12 text-[2.6rem] font-bold text-dark">
            Venha conhecer os nossos <span class="text-primary">servi√ßos</span>
          </h1>
        </div>
        <p class="font-work text-gray">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec
          dimentum facilisis interdum. Orci varius natoque penatibus et magnis
          dis parturient montes, nascetur ridiculus mus.
        </p>
      </div>

      <div class="my-11 h-[1px] w-full bg-lightgray"></div>

      <div
        class="my-5 grid max-w-[1184px] grid-cols-3 grid-rows-2 gap-x-12 gap-y-7"
      >
        {
          ourServicesList.map((service) => (
            <ServiceItem
              title={service.title}
              content={service.content}
              color={service.color}
            />
          ))
        }
      </div>
    </section>
  </body>
</html>
