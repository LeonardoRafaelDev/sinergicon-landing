---
import { navItems } from '../data'
---

<script>
  const nav = document.querySelector('header > nav')
  const btn = document.querySelector('button#mobile-menu-button')
  const menu = document.querySelector('#mobile-menu')

  btn.addEventListener('click', () => {
    document.querySelector('body').classList.toggle('overflow-y-hidden')
    menu.classList.toggle('hidden')
    nav.querySelector('div').classList.toggle('bg-primary')
    nav.classList.toggle('h-screen')
    nav.classList.toggle('bg-white')
  })
</script>

<header class="sticky top-0 z-50 flex justify-center bg-primary font-work">
  <nav class="mx-auto w-full max-w-[1184px]">
    <div class="p-4 lg:container lg:mx-auto">
      <div class="flex justify-end lg:justify-between">
        <div
          class="hidden items-center justify-start font-bold text-white lg:flex lg:space-x-8"
        >
          {navItems.map((item) => <a href={item.to}>{item.label}</a>)}
        </div>
        <div class="hidden justify-end lg:flex">
          <a>
            <button
              type="button"
              class="mr-3 rounded-lg bg-white p-3 text-center font-bold text-primary md:mr-0"
            >
              Entrar em contato
            </button></a
          >
        </div>
        <div class="flex items-center lg:hidden">
          <button id="mobile-menu-button" class="outline-none">
            <svg
              class="h-6 w-6 text-white"
              x-show="!showMenu"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <div
      id="mobile-menu"
      class="z-30 hidden h-full w-full bg-primary px-6 py-16 font-bold text-white"
    >
      <ul>
        {
          navItems.map((item) => (
            <li class="mb-8">
              <a href={item.to}>{item.label}</a>
            </li>
          ))
        }
      </ul>
      <a
        href=""
        class="text-md inline-block w-full rounded-xl bg-white px-4 py-3 text-center font-bold text-primary md:px-10 md:py-4 lg:text-xl"
      >
        Entrar em Contato
      </a>
    </div>
  </nav>
</header>
