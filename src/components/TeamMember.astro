---
interface Props {
  name: string
  role: string
  picture: string
  alt?: string
}

const { name, role, picture, alt = '' } = Astro.props
---

<div class="group my-5 flex max-w-[272px] flex-col">
  <div
    class="h-[300px] w-full overflow-hidden rounded-xl transition group-hover:shadow-lg group-hover:shadow-primary/30 md:h-[348px]"
  >
    <img src={picture} alt={alt} class="h-full object-cover" />
  </div>
  <div class="my-5 text-center font-montserrat">
    <h2
      class="text-xl font-bold text-black transition group-hover:text-primary"
    >
      {name}
    </h2>
    <p class="mt-3 font-medium text-gray">{role}</p>
  </div>

  <div class="h-[1px] w-full bg-lightgray"></div>

  <div class="mt-5 flex w-full justify-around px-4">
    <div
      class="flex h-[2rem] w-[2rem] cursor-pointer items-center justify-center rounded-[4px] bg-gray transition hover:bg-primary hover:shadow-lg hover:shadow-primary/80"
    >
      <img src="/Icon.svg" alt="" />
    </div>
    <div
      class="flex h-[2rem] w-[2rem] cursor-pointer items-center justify-center rounded-[4px] bg-gray transition hover:bg-primary hover:shadow-lg hover:shadow-primary/80"
    >
      <img src="/Icon.svg" alt="" />
    </div>
    <div
      class="flex h-[2rem] w-[2rem] cursor-pointer items-center justify-center rounded-[4px] bg-gray transition hover:bg-primary hover:shadow-lg hover:shadow-primary/80"
    >
      <img src="/Icon.svg" alt="" />
    </div>
  </div>
</div>
